<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="es.upm.miw.helpi">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Helpi">
        <activity
            android:name=".NoticeDetailsActivity"
            android:exported="false"
            android:label="@string/title_notice_details"/>
        <activity
            android:name=".OrganizationDetailsActivity"
            android:exported="false"
            android:parentActivityName=".MainActivity"
            android:label="@string/title_organization_details"/>
        <activity
            android:name=".EventDetailsActivity"
            android:label="@string/title_event_details"
            android:exported="false"
            android:parentActivityName=".MainActivity" />
        <activity
            android:label="@string/sign_up"
            android:name=".RegisterActivity"
            android:exported="false"
            android:parentActivityName=".EmailLoginActivity" />
        <activity
            android:name=".EmailLoginActivity"
            android:label="@string/title_login"
            android:exported="false"
            android:parentActivityName=".LoginActivity" />
        <activity
            android:label="@string/profile"
            android:name=".ProfileActivity"
            android:exported="false"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:exported="true" />
    </application>

</manifest>